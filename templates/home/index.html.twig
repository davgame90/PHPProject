{# templates/home/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<header class="container-fluid text-center bg-light py-5">
    <h1 class="display-4">Bienvenue sur Bilel & David Associates</h1>
    <p class="lead">Une solution complète pour gérer vos événements.</p>
    <a class="btn btn-primary btn-lg" href="{{ path('event_create') }}" role="button">Créer un événement</a>
</header>

<section class="container my-5">
    <h2 class="mb-4">Liste des événements publics</h2>

    {% if publicEvents is not empty %}
        {% for event in publicEvents %}
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">{{ event.title }}</h5>
                    <p class="card-text">{{ event.description }}</p>
                    <p class="card-text">Date: {{ event.date|date('d/m/Y H:i') }}</p>
                    <p class="card-text">Max Participants: {{ event.maxParticipants }}</p>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <p>Aucun événement public trouvé.</p>
    {% endif %}
</section>

{% endblock %}